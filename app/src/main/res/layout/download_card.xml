<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_download"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardElevation="8dp"
        card_view:cardCornerRadius="8dp">
        <RelativeLayout
            android:id="@+id/card_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white">
            <ImageView
                android:id="@+id/image_gk"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:src="@drawable/icon_category_knowledge"/>

                <TextView
                    android:id="@+id/download_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="2000 GK Question"
                    android:textColor="@android:color/black"
                    android:layout_toRightOf="@id/image_gk"
                    android:textSize="28dp"/>
                <TextView
                    android:id="@+id/download_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Pinnacle"
                    android:textColor="@color/blue"
                    android:maxLines="1"
                    android:layout_toRightOf="@id/image_gk"
                    android:layout_below="@id/download_title"
                    android:textSize="18dp"/>
            <TextView
                android:id="@+id/download_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Few Days Ago"
                android:textColor="@android:color/darker_gray"
                android:maxLines="1"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textSize="16dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>