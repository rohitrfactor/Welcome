<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="2dp">
     <LinearLayout
         android:id="@+id/card_color"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/blue_grey_card"
         android:orientation="vertical">
    <TextView
        android:id="@+id/feed_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:textColor="@color/card_text_color"
        android:hint="Heading"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="24dp"/>
         <TextView
             android:id="@+id/feed_preview"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:ellipsize="end"
             android:maxLines="4"
             android:textColor="@color/card_fade_text"
             android:hint="@string/preview_content"
             android:layout_marginTop="5dp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:textSize="18dp"
             />
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             >
             <TextView
                 android:id="@+id/feed_duration"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:hint="Approx 4 Min"
                 android:textColor="@color/card_fade_text"
                 android:maxLines="1"
                 android:layout_alignParentLeft="true"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:textSize="14dp"/>
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="Continue Reading..."
                 android:textColor="@color/card_text_color"
                 android:maxLines="1"
                 android:layout_alignParentRight="true"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:textSize="14dp"/>
         </RelativeLayout>
     </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>